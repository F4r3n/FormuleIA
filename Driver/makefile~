CC=gcc
PILE=pile/
BIN=bin/
SRC=src/
FI=file/
MANUBIN=~/Bureau/GrandPrix/drivers/


CFLAGS=-Wall -std=c99 -pedantic -O3

all: MyWaywardCar

testManu: $(MANUBIN)testManu

MyWaywardCar: $(BIN)test.o $(SRC)fonction.o $(PILE)pile.o $(FI)fi.o
	$(CC) -o $@ $^ 

$(MANUBIN)testManu: $(BIN)test.o $(SRC)fonction.o $(LISTE)listeA.o $(FILEBIN)file.o $(BIN)dijkstra.o $(PILE)pile.o $(FI)fi.o
	$(CC) -o $@ $^ 

$(BIN)test.o: $(SRC)test.c
	$(CC) -o $@ -c $^ $(CFLAGS)

$(SRC)fonction.o: $(SRC)fonction.c
	$(CC) -o $@ -c $^ $(CFLAGS)

$(PILE)pile.o: $(PILE)pile.c
	$(CC) -o $@ -c $^ $(CFLAGS)

$(FI)fi.o: $(FI)file.c
	$(CC) -o $@ -c $^ $(CFLAGS)


clean:
	-rm $(BIN)*.o
	-rm Liste/*.o
	-rm $(PILE)*.o
	-rm $(FONCTION)*.o
	-rm $(FI)*.o
